{
  "manifest_version": 3,
  "name": "Condenser",
  "version": "0.1.0",
  "description": "Export chat histories from AI platforms",
  "action": {
    "default_title": "Export chats",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "permissions": ["downloads", "storage", "scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://gemini.google.com/*",
        "https://www.perplexity.ai/*",
        "https://claude.ai/*",
        "https://*.anthropic.com/*"
      ],
      "js": ["dist/content.js"],
      "type": "module",
      "run_at": "document_idle"
    }
  ]
}
